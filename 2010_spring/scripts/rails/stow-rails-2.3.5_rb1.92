#!/bin/bash
RUBY_VERSION=`ruby -e 'print RUBY_VERSION'`
RUBY_VERSION='1.92'
set -o errexit
SUDO="sudo"
PREFIX='/usr'
GEM_NAME='rails'
GEM_VERSION='2.3.5'

STOW_DIR='/stow'
PACKAGE="${GEM_NAME}_${GEM_VERSION}_rb${RUBY_VERSION}"
PACKAGE_DIR="${STOW_DIR}/${PACKAGE}"

INSTALL_DIR="${PACKAGE_DIR}${PREFIX}/lib/ruby/gems/1.91"

GEM="GEM_NAME-GEM_VERSION"

${SUDO} gem install \
    ${GEM_NAME} \
    --install-dir ${INSTALL_DIR} \
    --bindir ${PACKAGE_DIR}/${PREFIX}/bin \
    --no-rdoc \
    --no-ri \
    --ignore-dependencies

${SUDO} find /usr -cmin -2 > find.cmin2.usr
${SUDO} find /stow -cmin -2 > find.cmin2.stow
